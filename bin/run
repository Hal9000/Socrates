#!/usr/bin/env ruby

# encoding: UTF-8

$: << File.expand_path(File.join(File.dirname(__FILE__), '../lib'))

require 'rubygems'
require 'bundler/setup'

Bundler.require(:default)

require 'pp'

require 'socrates'
require 'ui/dumbtext'

session = Socrates::Session.new
topic = session.select_topic
if topic.nil?
  puts "Exiting...\n\n "
  exit
end

Topic.current = topic

list = session.get_questions(topic)

list.each {|q| q.ask }
